body{
    background-image: url("../vidflow_background1.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    height: 100vh;
    margin: 0;
}

.logo{
    display: block;
    margin: 0 auto;
    width: 250px;
    height: auto;
    margin-top: 110px;
    margin-bottom: 40px;
}

.registration{
    background-color: #c0c0c0;
    border-radius: 20px;
    text-align: center;
    margin: 0 auto;
    padding-right: 60px;
    padding-left: 60px;
    width: 30%;
    padding-top: 30px;
    padding-bottom: 30px;
}


.field{
    border-radius: 20px;
    border: 2px solid black;
    background-color: #e6e6e6;
    width: 80%;
    padding: 10px;
    text-align: center;
}

label{
    font-family: "Jersey 15";
    font-size: 20px;
}

.register{
    padding: 15px;
    background-color: #505050;
    cursor: pointer;
    border-radius: 15px;
    color: white;
    font-family: "Jersey 15";
    font-size: 25px;
}

.register:hover{
    border:3px solid black;
}

#existingacc{
    text-decoration: underline;
    font-family: "Inder";
    font-size: 15px;
    color: black;
}

#accquestion{
    font-family: "Inder";
    font-size: 15px;
    color: black;
}

#loginbutton{
    text-decoration: none;
    font-family: "Jersey 15";
    color: white;
    font-size: 25px;
    background-color: #de0f00;
    padding-right: 25px;
    padding-left: 25px;
    padding-bottom: 15px;
    padding-top: 15px;
    border: 2px solid #700901;
    cursor: pointer;
    border-radius: 10px;
    right: 0;
    top: 0;
    position: absolute;
    margin-right: 20px;
    margin-top: 20px;
}

#laststeptitle{
    border: 4px solid #505050;
    text-align: center;
    width: 27%;
    background-color: #e6e6e6;
    border-radius: 15px;
    font-family: "Inder";
    font-size: 14px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 140px;
}

#plan1{
    border: 3px solid #505050;
    text-align: center;
    width: 20%;
    height: auto;
    margin-top: 100px;
    display: block;
    background-color: #e6e6e6;
    font-family: "Inder";
    font-size: 14px;
    border-radius: 15px;
    margin-left: 23%;
    display: inline-block;
    vertical-align: top;
    padding-bottom: 33px;
}

#plan2{
    border: 3px solid #505050;
    text-align: center;
    width: 20%;
    height: auto;
    margin-top: 100px;
    display: block;
    background-color: #e6e6e6;
    font-family: "Inder";
    font-size: 14px;
    border-radius: 15px;
    margin-left: 13%;
    display: inline-block;
    padding-bottom: 20px;
}

#freeplanchoose{
    border: 2px solid #700901;
    background-color: #de0f00;
    padding: 10px;
    color: white;
    cursor: pointer;
    border-radius: 15px;
    font-weight: bold;
}

#freeplanchoose:hover{
    background-color: darkred;
    border-color: black;
}

#donateplanchoose{
    border: 2px solid #700901;
    background-color: #de0f00;
    padding: 10px;
    color: white;
    cursor: pointer;
    border-radius: 15px;
    font-weight: bold;
}

#donateplanchoose:hover{
    background-color: darkred;
    border-color: black;
}

#welcomemessage {
    border: 4px solid #505050;
    text-align: center;
    width: 27%;
    background-color: #e6e6e6;
    border-radius: 15px;
    font-family: "Inder";
    font-size: 14px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    padding-top: 12px;
}

#gotologin{
    text-decoration: none;
    font-family: "Inder";
    cursor: pointer;
    font-size: 12px;
    background-color: #de0f00; 
    border: 3px solid #700901;
    color: white;
    border-radius: 15px;
    padding: 10px;
}

#profilepicupload_box{
    margin: 0 auto;
    position: absolute;
    top: 22%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    text-align: center;
}

#profilepicupload_title{
    border: 4px solid #505050;
    font-size: 30px;
    font-family: "Inder";
    background-color: #e6e6e6;
    border-radius: 15px;
    padding: 10px;
}

#profilepicupload_attach{
    display: none;
}

#profilepicupload_customattach{
    border: 3px solid white;
    display: inline-block;
    padding: 70px 70px;
    cursor: pointer;
}

#profilepicupload_uploadicon{
    width: 40px;
    height: 40px;
}

#profilepicupload_uploadtext{
    font-size: 15px;
    font-family: "Inder";
    color: white;
}

#customizepage_box{
    margin: 0 auto;
    position: absolute;
    top: 70%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    text-align: center;
}

#customizepage_title{
    border: 4px solid #505050;
    font-size: 30px;
    font-family: "Inder";
    background-color: #e6e6e6;
    border-radius: 15px;
    padding: 10px;
}

#customizepage_fonttype{
    text-align: center;
}

#customizepage_fonttype_title{
    float: left;
    font-family: "Inder";
    margin-left: 50px;
    color: white;
}

#customizepage_fonttype_choose{
    margin-top: 5px;
}

#customizepage_backgroundcolor_title{
    float: left;
    font-family: "Inder";
    margin-left: 50px;
    color: white;
}

#customizepage_backgroundcolor_choose{
    width: 70px;
    height: 30px;
}

#customizepage_videobordercolor_title{
    float: left;
    font-family: "Inder";
    margin-left: 50px;
    color: white;
    border: 3px solid;
    border-image: linear-gradient(to bottom, #BE0606, #7a0202) 1;
}

#customizepage_videobordercolor_choose1{
    margin-left: -45px;
}

#continueregistration_button{
    padding-bottom: 12px;
    padding-top: 12px;
    padding-right: 15px;
    padding-left: 15px;
    border: 3px solid #7a0202;
    background-color: #de0f00;
    cursor: pointer;
    font-weight: bold;
    font-family: "Inter";
    color: white;
    font-size: 20px;
    border-radius: 15px;
}

#successicon{
    width: 50px;
    height: auto;
}

@media only screen and (max-width: 600px) {
    .registration{
        width: 50%;
    }
    .register{
        padding: 5px;
    }
    #loginbutton{
        padding-right: 8px;
        padding-left: 8px;
        padding-bottom: 8px;
        padding-top: 8px;
    }
}

@media only screen and (max-width: 900px){
    .registration{
        width: 30%;
    }
    .register{
        padding: 11px;
    }
    .registration_title{
        font-size: 20px;
    }
    #loginbutton{
        padding-right: 11px;
        padding-left: 11px;
        padding-bottom: 11px;
        padding-top: 11px;
    }
}

@media only screen and (max-width: 500px){
    .field{
        width: 100%;
    }
}